<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="today"
            type="com.bmprj.weatherforecast.TodayFragment" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TodayFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="20 Mayıs,2:40 ÖS"
                android:layout_margin="20dp"/>

            <TextView
                android:id="@+id/degree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20°"
                android:layout_marginStart="10dp"
                android:layout_marginTop="50dp"
                app:layout_constraintTop_toBottomOf="@id/date"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="80sp"/>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animationView"
                android:layout_width="140dp"
                android:layout_height="140dp"
                app:lottie_rawRes="@raw/snowy_night"
                app:layout_constraintStart_toEndOf="@id/degree"
                app:layout_constraintTop_toBottomOf="@id/date"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="35dp"
                android:layout_marginStart="10dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/animationView"
                app:layout_constraintStart_toEndOf="@id/degree"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                android:textSize="25sp"
                android:text="Parçalı Bulutlu"/>



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/degree" />

        </androidx.constraintlayout.widget.ConstraintLayout>





    </ScrollView>
</layout>