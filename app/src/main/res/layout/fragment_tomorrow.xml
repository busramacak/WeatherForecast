<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="tomorrow"
            type="com.bmprj.weatherforecast.TomorrowFragment" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TomorrowFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:onClick="@{(V)->tomorrow.refreshCurrentClick(V)}"
                android:id="@+id/refresh"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/refresh"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="20dp"/>

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="20 Mayıs,2:40 ÖS"
                android:layout_margin="20dp"/>

            <TextView
                android:id="@+id/degree"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="2°"
                android:layout_marginStart="30dp"
                android:layout_marginTop="80dp"
                app:layout_constraintTop_toBottomOf="@id/date"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="25sp"/>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animationView"
                android:layout_width="170dp"
                android:layout_height="170dp"
                app:layout_constraintStart_toEndOf="@id/degree"
                app:layout_constraintTop_toBottomOf="@id/date"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="35dp"
                android:layout_marginStart="10dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true" />


            <TextView
                android:id="@+id/condition"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/animationView"
                app:layout_constraintStart_toEndOf="@id/degree"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:textSize="25sp"
                android:text="Parçalı Bulutlu"/>



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:layout_marginTop="120dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/condition" />


            <RelativeLayout
                android:id="@+id/rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recy">

                <TextView
                    android:id="@+id/timelytxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:text="Güncel Detaylar" />

                <TextView
                    android:id="@+id/humiditytxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_below="@+id/timelytxt"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Nem Oranı" />

                <TextView
                    android:id="@+id/humidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_toEndOf="@+id/humiditytxt"
                    android:layout_below="@id/timelytxt"
                    android:text="" />

                <TextView
                    android:id="@+id/uvtxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/humiditytxt"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="UV İndeksi" />

                <TextView
                    android:id="@+id/uv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_toEndOf="@+id/humiditytxt"
                    android:layout_below="@id/humidity"
                    android:text="" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relRain"
                android:background="@drawable/line_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:layout_constraintTop_toBottomOf="@id/rel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/raintxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yağış"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyRain"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/raintxt"
                    />

                <TextView
                    android:id="@+id/totalprecip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Günlük toplam hacim"
                    android:layout_below="@id/recyRain"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line_bottom"
                app:layout_constraintTop_toBottomOf="@id/relRain"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="10dp"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/wind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:text="Rüzgar"
                    android:textSize="17sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/wind_kph"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="40sp"
                    android:text="7"
                    android:textColor="#00ACC1"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_below="@id/wind"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="km/h"
                    android:layout_below="@id/wind"
                    android:layout_marginTop="35dp"
                    android:layout_toEndOf="@id/wind_kph"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"/>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyWind"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/wind_kph"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>




        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>