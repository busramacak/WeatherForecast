<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="today"
            type="com.bmprj.weatherforecast.ui.TodayFragment" />

    </data>

    <ScrollView
        android:id="@+id/scrollV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.TodayFragment"
        android:background="@color/cloudBackground">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:onClick="@{(V)->today.refreshCurrentClick(V)}"
                android:id="@+id/refresh"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/refresh"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="20dp"/>

            <TextView
                android:textColor="@color/white"
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="20 Mayıs,2:40 ÖS"
                android:layout_margin="20dp"/>

            <TextView
                android:id="@+id/degree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="50dp"
                android:fontFamily="sans-serif-light"
                android:text="2°"
                android:textColor="@color/white"
                android:textSize="80sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/date" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animationView"
                android:layout_width="170dp"
                android:layout_height="170dp"
                app:layout_constraintStart_toEndOf="@id/degree"
                app:layout_constraintTop_toBottomOf="@id/date"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="35dp"
                android:layout_marginStart="10dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true" />


            <TextView
                android:id="@+id/condition"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-light"
                android:text="Parçalı Bulutlu"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/degree"
                app:layout_constraintTop_toBottomOf="@id/animationView" />



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:layout_marginTop="120dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/condition" />

            <ImageView
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1px"
                app:layout_constraintTop_toBottomOf="@id/recy"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="parent"/>

            <RelativeLayout
                android:id="@+id/rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line1">

                <TextView
                    android:id="@+id/timelytxt"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="19sp"
                    android:fontFamily="sans-serif-light"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:text="Güncel Detaylar" />

                <TextView
                    android:id="@+id/humiditytxt"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:fontFamily="sans-serif-light"
                    android:layout_below="@+id/timelytxt"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Nem Oranı" />

                <TextView
                    android:id="@+id/humidity"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:fontFamily="sans-serif-light"
                    android:layout_toEndOf="@+id/humiditytxt"
                    android:layout_below="@id/timelytxt"
                    android:text="" />

                <TextView
                    android:id="@+id/uvtxt"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/humiditytxt"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="17sp"
                    android:fontFamily="sans-serif-light"
                    android:text="UV İndeksi" />

                <TextView
                    android:id="@+id/uv"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:fontFamily="sans-serif-light"
                    android:layout_toEndOf="@+id/humiditytxt"
                    android:layout_below="@id/humidity"
                    android:text="" />
                    

            </RelativeLayout>

            <ImageView
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1px"
                app:layout_constraintTop_toBottomOf="@id/rel"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="parent"/>

            <RelativeLayout
                android:id="@+id/relRain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:layout_constraintTop_toBottomOf="@id/line2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/raintxt"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yağış"
                    android:textSize="19sp"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyRain"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/raintxt"
                    />

                <TextView
                    android:id="@+id/totalprecip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="sans-serif-light"
                    android:text="Günlük toplam hacim"
                    android:layout_below="@id/recyRain"/>

            </RelativeLayout>

            <ImageView
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="1px"
                app:layout_constraintTop_toBottomOf="@id/relRain"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="parent"/>

            <RelativeLayout
                android:id="@+id/relWind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/line3"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="10dp"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/wind"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginStart="10dp"
                    android:text="Rüzgar"
                    android:textSize="19sp"/>

                <TextView
                    android:id="@+id/wind_kph"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="50sp"
                    android:text="7"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/wind"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_below="@id/wind"/>

                <ImageView
                    android:id="@+id/windDir"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/wind"
                    android:scaleType="matrix"
                    android:layout_marginTop="17dp"
                    android:layout_marginLeft="20dp"
                    android:layout_toEndOf="@+id/wind_kph"
                    android:src="@drawable/arrow_up" />

                <TextView
                    android:id="@+id/kph"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="km/h"
                    android:textSize="17sp"
                    android:fontFamily="sans-serif-light"
                    android:layout_below="@id/windDir"
                    android:layout_toEndOf="@id/wind_kph"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:textColor="@color/white"
                    android:id="@+id/direction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N"
                    android:textSize="17sp"
                    android:fontFamily="sans-serif-light"
                    android:layout_below="@id/windDir"
                    android:layout_toEndOf="@id/kph"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="10dp"/>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyWind"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/wind_kph"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>





    </ScrollView>
</layout>